{
  "manifest_version": 3,
  "name": "Hebrew Text Direction Fix for AI Chats",
  "version": "1.0.1",
  "description": "Automatically fixes Hebrew-English mixed text direction in Claude, ChatGPT, Gemini, Copilot, and Perplexity",
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://openai.com/chatgpt*",
        "https://*.openai.com/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://www.bing.com/chat*",
        "https://copilot.microsoft.com/*",
        "https://perplexity.ai/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [],
  "action": {
    "default_title": "Hebrew BiDi Fix Active"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
