{
  "manifest_version": 3,
  "name": "Claude Hebrew Text Direction Fix",
  "version": "1.0",
  "description": "Fixes bidirectional text rendering for Hebrew and English mixed content in Claude",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://claude.ai/*",
        "https://*.claude.ai/*",
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://openai.com/chatgpt*",
        "https://*.openai.com/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://www.bing.com/chat*",
        "https://copilot.microsoft.com/*",
        "https://you.com/*",
        "https://perplexity.ai/*",
        "https://character.ai/*",
        "https://poe.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {},
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}